#:kivy 1.0.9

<Hitmanager>:
    BoxLayout:
        size: root.width, root.height
        orientation: 'horizontal'
        padding: 8
        spacing: 8

        TreeView:
            id: testlist_tv
            hide_root: True

        BoxLayout:
            orientation: 'vertical'

            RstDocument:
                id: test_info
                base_font_size: 24
                size_hint: (1, 1)
                color: (0, 0, 0, 1)
                background_color: (0.5, 0.9, 0.9, 1)
                scroll_type: ['bars', 'content']
                bar_width: 10

            Label:
                id: state_label
                font_size: 24
                bold: True
                size_hint: (1, 0.2)
                color: (0, 0, 0, 1)
                background_color: (0.5, 0.5, 0.5, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: ">"
                    size_hint: (0.1, 1)

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: instruction_label

                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: "Yes"
                            on_press: root.user_confirm(True)
                        Button:
                            text: "No"
                            on_press: root.user_confirm(False)

                Label:
                    text: ">"
                    size_hint: (0.1, 1)


            Button:
                id: btn_run
                text: "Run selected test cases"
                size_hint: (1, 0.2)
                on_press: root.run_selected_tests()
