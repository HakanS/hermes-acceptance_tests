#:kivy 2.0.0
#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<Hitmanager>:
    BoxLayout:
        size: root.width, root.height
        orientation: 'horizontal'
        padding: 8
        spacing: 8

        ScrollView:
            bar_width: 10
            effect_cls: ScrollEffect
            scroll_type: ['bars', 'content']
            TreeView:
                id: testlist_tv
                size_hint_y: None
                height: self.minimum_height
                hide_root: True

        BoxLayout:
            orientation: 'vertical'

            RstDocument:
                id: test_info
                base_font_size: 24
                size_hint: (1, 4)
                color: (0, 0, 0, 1)
                background_color: (0.5, 0.9, 0.9, 1)
                scroll_type: ['bars', 'content']
                bar_width: 10

            Label:
                id: state_label
                font_size: 24
                bold: True
                size_hint: (1, 1)
                color: (0, 0, 0, 1)
                background_color: (0.5, 0.5, 0.5, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            ScrollView:
                size_hint: (1, 3)
                bar_width: 10
                effect_cls: ScrollEffect
                scroll_type: ['bars', 'content']
                Label:
                    id: instruction_label
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 1)
                padding: 12

                Button:
                    id: img_upstream1
                    text: "upstream"
                    disabled: True
                Label:
                    id: img_upstream2
                    text: ">"
                    size_hint: (0.1, 1)
                Button:
                    id: img_sut
                    text: "System under test"
                    disabled: True
                Label:
                    id: img_downstream1
                    text: ">"
                    size_hint: (0.1, 1)
                Button:
                    id: img_downstream2
                    text: "downstream"
                    disabled: True


            Button:
                id: btn_run
                text: "Run selected test cases"
                size_hint: (1, 1)
                on_press: root.run_selected_tests()
